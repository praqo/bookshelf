{
  "name": "bookshelf",
  "version": "1.0.0",
  "description": "personal library app using open library api",
  "main": "index.js",
  "scripts": {
    "build:css": "node-sass --output-style compressed -o dist/css src/sass",
    "build:js": "uglifyjs -o dist/js/bookshelf.min.js src/js/bookshelf.js",
    "build": "npm run build:css && npm run build:js",
    "watch:css": "onchange 'src/sass' -- npm run build:css",
    "watch:js": "onchange 'src/js/' -- npm run build:js",
    "watch": "npm run build && npm-run-all --parallel watch:*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/praqo/bookshelf.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/praqo/bookshelf/issues"
  },
  "homepage": "https://github.com/praqo/bookshelf#readme",
  "devDependencies": {
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.0.2",
    "uglify-es": "^3.3.9"
  }
}
